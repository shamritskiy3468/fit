%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  / .field
  /   = f.label :first_name
  /   %br/
  /   = f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-group"
  / .field
  /   = f.label :last_name
  /   %br/
  /   = f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-group"
  .form-group
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
    / .field
  /   = f.label :phone
  /   %br/
  /   = f.text_field :phone, autofocus: true, autocomplete: "phone", class: "form-group"
  .form-group
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: "form-control"
  .form-group
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"
  .form-group
    .field
      = f.label :type
      %br/
      = select_tag :type, options_for_select([['Doctor', 'Doctor'], ['Patient', 'Patient']]), class: 'form-control'
  .actions
    = f.submit "Sign up", class: "btn btn-primary"
  %br
= render "devise/shared/links"
